{
  "include" :["src"],
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */

    /* Projects */
    
    /* Language and Environment */
    "target": "es2016",                               
    /* Modules */
    "module": "commonjs",                                    
    /* JavaScript Support */
   
    /* Emit */

    /* Interop Constraints */
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,          
    /* Type Checking */
    "strict": true,                                   
    "noImplicitAny": true,                            
    "strictNullChecks": true,                        

    /* Completeness */
    "skipLibCheck": true,    
    "resolveJsonModule" : true,                           
  }
}
